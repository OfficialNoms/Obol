{
  "name": "obol",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "dev": "npm run build:css && npm run build:assets && tsx watch src/index.ts",
    "start": "node --enable-source-maps dist/index.js",
    "build:css": "tailwindcss -i ./src/assets/input.css -o ./public/css/output.css",
    "build:assets": "node src/scripts/copy-assets.mjs",
    "build": "tsc -p tsconfig.json && npm run build:css && npm run build:assets",
    "lint": "eslint . --ext .ts",
    "fix": "eslint \"src/**/*.{ts,tsx}\" --fix",
    "prepare": "echo \"âœ“ Obol prepared\"",
    "format": "prettier -w ."
  },
  "dependencies": {
    "@discordjs/rest": "^2.6.0",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/line-clamp": "^0.4.4",
    "@tailwindcss/typography": "^0.5.13",
    "alpinejs": "^3.14.1",
    "better-sqlite3": "^11.8.1",
    "cookie-parser": "^1.4.6",
    "discord.js": "^14.16.3",
    "dotenv": "^16.4.5",
    "ejs": "^3.1.10",
    "express": "^4.19.2",
    "express-rate-limit": "^7.3.1",
    "express-session": "^1.18.0",
    "helmet": "^7.1.0",
    "passport": "^0.7.0",
    "passport-discord": "^0.1.4",
    "tiny-csrf": "^1.1.4"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/cookie-parser": "^1.4.7",
    "@types/ejs": "^3.1.5",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.18.0",
    "@types/node": "^22.7.5",
    "@types/passport": "^1.0.16",
    "@types/passport-discord": "^0.1.13",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "cpx": "^1.5.0",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-unused-imports": "^4.2.0",
    "prettier": "^3.6.2",
    "tailwindcss": "^3.4.4",
    "tsx": "^4.19.1",
    "typescript": "^5.6.3"
  }
}