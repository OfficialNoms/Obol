<% layout('layout') %>
<h2>Your servers</h2>
<p class="muted">We only show servers where you have <code class="mono">MANAGE_GUILD</code> or <code class="mono">ADMINISTRATOR</code>.</p>
<ul>
  <% if (guilds.length === 0) { %>
    <li>No manageable servers found.</li>
  <% } %>
  <% guilds.forEach(g => { %>
    <li>
      <a href="/guild/<%= g.id %>"><strong><%= g.name %></strong></a>
      <span class="muted">â€” ID: <code class="mono"><%= g.id %></code></span>
    </li>
  <% }) %>
</ul>
