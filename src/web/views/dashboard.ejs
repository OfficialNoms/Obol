<%- include('partials/header'); %>

<h2 class="text-3xl font-bold mb-6">Admin Dashboard</h2>
<p class="mb-6 text-gray-400">Select a server you manage to configure its games and tokens.</p>

<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
    <% if (guilds.length > 0) { %>
        <% guilds.forEach(g => { %>
        <a href="/guild/<%= g.id %>" class="flex items-center gap-x-4 bg-bg-light p-4 rounded-lg border border-gray-700 hover:border-brand-500 transition">
            <% if (g.icon) { %>
                <img src="https://cdn.discordapp.com/icons/<%= g.id %>/<%= g.icon %>.png" alt="<%= g.name %> icon" class="h-12 w-12 rounded-lg flex-shrink-0">
            <% } else { %>
                <div class="h-12 w-12 rounded-lg flex-shrink-0 bg-gray-700 flex items-center justify-center text-xl font-bold text-gray-400">
                    <%= g.name.charAt(0) %>
                </div>
            <% } %>
            <div>
                <h3 class="font-semibold text-lg text-white truncate"><%= g.name %></h3>
                <p class="text-sm text-gray-400 font-mono"><%= g.id %></p>
            </div>
        </a>
        <% }); %>
    <% } else { %>
        <div class="bg-yellow-900/50 border border-yellow-700 text-yellow-200 px-4 py-3 rounded-lg col-span-full">
            <p>No manageable guilds found where the bot is also present.</p>
        </div>
    <% } %>

    <a href="/invite-setup" class="flex items-center justify-center flex-col gap-y-2 bg-bg-dark p-4 rounded-lg border-2 border-dashed border-gray-600 hover:border-brand-500 hover:bg-bg-light transition text-gray-400 hover:text-white">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" /></svg>
        <span class="font-semibold text-lg">Add a Server</span>
    </a>
</div>

<%- include('partials/footer'); %>